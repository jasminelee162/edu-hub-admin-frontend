<= 0\"\n          @click=\"deleteDataBtn\"\n          class=\"action-btn delete-btn\">\n          批量删除\n        </el-button>\n      </div>\n\n      <el-table\n        v-loading=\"loading\"\n        :data=\"tableData\"\n        :header-cell-style=\"tableHeaderStyle\"\n        :row-style=\"tableRowStyle\"\n        @selection-change=\"handleSelectionChange\"\n        stripe\n        class=\"tech-table\">\n        <el-table-column\n          type=\"selection\"\n          width=\"55\"\n          align=\"center\">\n        </el-table-column>\n        <el-table-column\n          prop=\"content\"\n          label=\"评论内容\"\n          min-width=\"200\">\n          <template #default=\"{row}\">\n            <div class=\"content-cell\">\n              <i class=\"el-icon-chat-line-round\" style=\"color:#7B68EE; margin-right:8px\"></i>\n              <span>{{ row.content | truncate(50) }}</span>\n              <el-link \n                v-if=\"row.content && row.content.length > 50\"\n                type=\"primary\"\n                @click=\"showFullContent(row.content)\"\n                class=\"tech-view-more\">\n                查看全部\n              </el-link>\n            </div>\n          </template>\n        </el-table-column>\n        <el-table-column\n          prop=\"createBy\"\n          label=\"评论人\"\n          width=\"120\">\n          <template #default=\"{row}\">\n            <div class=\"user-cell\">\n              <i class=\"el-icon-user\" style=\"color:#9370DB; margin-right:8px\"></i>\n              <span>{{ row.createBy }}</span>\n            </div>\n          </template>\n        </el-table-column>\n        <el-table-column\n          prop=\"createTime\"\n          label=\"评论时间\"\n          width=\"180\">\n          <template #default=\"{row}\">\n            <div class=\"time-cell\">\n              <i class=\"el-icon-time\" style=\"color:#A5A4BF; margin-right:8px\"></i>\n              <span>{{ row.createTime }}</span>\n            </div>\n          </template>\n        </el-table-column>\n        <el-table-column\n          label=\"操作\"\n          fixed=\"right\"\n          width=\"120\">\n          <template #default=\"{row}\">\n            <div class=\"action-buttons\">\n              <el-popconfirm\n                title=\"确认删除此评论？\"\n                @confirm=\"deleteDate(row.id)\"\n                confirm-button-text=\"确认\"\n                cancel-button-text=\"取消\"\n                icon=\"el-icon-warning\"\n                icon-color=\"#7B68EE\">\n                <el-tooltip content=\"删除评论\" placement=\"top\">\n                  <el-button \n                    size=\"mini\"\n                    type=\"danger\"\n                    class=\"action-btn delete-btn\">\n                    <i class=\"el-icon-delete\"></i> 删除\n                  </el-button>\n                </el-tooltip>\n              </el-popconfirm>\n            </div>\n          </template>\n        </el-table-column>\n      </el-table>\n\n      <el-pagination\n        background\n        layout=\"total, sizes, prev, pager, next, jumper\"\n        :page-sizes=\"[10, 20, 50, 100]\"\n        :page-size=\"search.pageSize\"\n        :current-page=\"search.pageNumber\"\n        @size-change=\"handleSizeChange\"\n        @current-change=\"handleCurrentChange\"\n        :total=\"total\"\n        class=\"tech-pagination\">\n      </el-pagination>\n    </div>\n  </div>\n</template>\n\n<script>\nimport {getTaskCommentPage,removeTaskComment} from '../../../api/api'\nexport default {\n  data() {\n    return{\n      loading: true,\n      update: [],\n      remove: [],\n      updateId: \"\",\n      search: {\n          taskId: \"\",\n          content: \"\",\n          createBy: \"\",\n          pageNumber: 1,\n          pageSize:10\n      },\n      total: 0,\n      tableData: []\n    }\n  },\n  filters: {\n    truncate(value, length) {\n      if (!value) return ''\n      if (value.length <= length) return value\n      return value.substring(0, length) + '...'\n    }