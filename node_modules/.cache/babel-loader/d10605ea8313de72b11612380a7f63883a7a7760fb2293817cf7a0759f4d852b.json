th.random() * 1 - 0.5,\r\n        speedY: Math.random() * 1 - 0.5\r\n      }))\r\n\r\n      const animate = () => {\r\n        ctx.clearRect(0, 0, canvas.width, canvas.height)\r\n        ctx.fillStyle = 'rgba(107, 90, 205, 0.5)'\r\n        particles.forEach(p => {\r\n          p.x += p.speedX\r\n          p.y += p.speedY\r\n          if (p.x < 0 || p.x > canvas.width) p.speedX *= -1\r\n          if (p.y < 0 || p.y > canvas.height) p.speedY *= -1\r\n          ctx.beginPath()\r\n          ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2)\r\n          ctx.fill()\r\n        })\r\n        requestAnimationFrame(animate)\r\n      }\r\n      animate()\r\n    }\r\n  },\r\n  mounted() {\r\n    this.initParticles()\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.login-page {\r\n  position: relative;\r\n  width: 100vw;\r\n  height: 100vh;\r\n  overflow: hidden;\r\n  background: linear-gradient(135deg, #4B0082 0%, #6A5ACD 100%);\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n  font-family: 'Microsoft YaHei', sans-serif;\r\n}\r\n\r\n#particles-bg {\r\n  position: absolute;\r\n  top: 0;\r\n  left: 0;\r\n  z-index: 1;\r\n}\r\n\r\n.content {\r\n  position: relative;\r\n  z-index: 2;\r\n  width: 45%;\r\n  padding-left: 10%;\r\n  color: white;\r\n}\r\n\r\n.logo {\r\n  width: 180px;\r\n  height: 180px;\r\n  margin-bottom: 30px;\r\n  filter: drop-shadow(0 0 15px rgba(0, 191, 255, 0.5));\r\n}\r\n\r\n.slogan {\r\n  font-size: 2.2rem;\r\n  line-height: 1.4;\r\n  text-shadow: 0 0 10px rgba(0, 191, 255, 0.7);\r\n  margin-top: 20px;\r\n}\r\n\r\n.login-card {\r\n  position: relative;\r\n  z-index: 2;\r\n  width: 400px;\r\n  height: 500px;\r\n  margin-right: 10%;\r\n  background: rgba(255, 255, 255, 0.9);\r\n  backdrop-filter: blur(10px);\r\n  border-radius: 20px;\r\n  padding: 40px;\r\n  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);\r\n  display: flex;\r\n  flex-direction: column;\r\n  align-items: center;\r\n}\r\n\r\n.login-title {\r\n  margin: 30px 0;\r\n  fon