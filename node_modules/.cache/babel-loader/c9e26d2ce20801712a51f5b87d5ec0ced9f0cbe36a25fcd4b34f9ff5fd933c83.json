eRowStyle\"\r\n        @selection-change=\"handleSelectionChange\"\r\n        stripe\r\n        class=\"tech-table\">\r\n        <el-table-column\r\n          type=\"selection\"\r\n          width=\"55\"\r\n          align=\"center\">\r\n        </el-table-column>\r\n        <el-table-column\r\n          prop=\"content\"\r\n          label=\"评论内容\"\r\n          min-width=\"200\">\r\n          <template #default=\"{row}\">\r\n            <div class=\"content-cell\">\r\n              <i class=\"el-icon-chat-line-round\" style=\"color:#7B68EE; margin-right:8px\"></i>\r\n              <span>{{ row.content }}</span>\r\n            </div>\r\n          </template>\r\n        </el-table-column>\r\n        <el-table-column\r\n          prop=\"createBy\"\r\n          label=\"评论人\"\r\n          width=\"120\">\r\n          <template #default=\"{row}\">\r\n            <div class=\"user-cell\">\r\n              <i class=\"el-icon-user\" style=\"color:#9370DB; margin-right:8px\"></i>\r\n              <span>{{ row.createBy }}</span>\r\n            </div>\r\n          </template>\r\n        </el-table-column>\r\n        <el-table-column\r\n          prop=\"createTime\"\r\n          label=\"评论时间\"\r\n          width=\"180\">\r\n          <template #default=\"{row}\">\r\n            <div class=\"time-cell\">\r\n              <i class=\"el-icon-time\" style=\"color:#A5A4BF; margin-right:8px\"></i>\r\n              <span>{{ row.createTime }}</span>\r\n            </div>\r\n          </template>\r\n        </el-table-column>\r\n        <el-table-column\r\n          label=\"操作\"\r\n          fixed=\"right\"\r\n          width=\"120\">\r\n          <template #default=\"{row}\">\r\n            <div class=\"action-buttons\">\r\n              <el-popconfirm\r\n                title=\"确认删除此评论？\"\r\n                @confirm=\"deleteDate(row.id)\"\r\n                confirm-button-text=\"确认\"\r\n                cancel-button-text=\"取消\"\r\n                icon=\"el-icon-warning\"\r\n            