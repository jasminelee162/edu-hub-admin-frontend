{"ast":null,"code":"\n// script部分保持不变","map":{"version":3,"names":[],"sources":["src/views/system/user/user.vue"],"sourcesContent":["<template>\r\n  <div class=\"user-management\">\r\n    <div class=\"layout-container\">\r\n      <!-- 左侧部门树 -->\r\n      <div class=\"dept-tree\">\r\n        <el-input\r\n          class=\"tree-search\"\r\n          prefix-icon=\"el-icon-search\"\r\n          size=\"small\"\r\n          placeholder=\"输入部门名称进行过滤\"\r\n          v-model=\"filterText\">\r\n        </el-input>\r\n        <el-tree\r\n          class=\"tree-content\"\r\n          node-key=\"id\"\r\n          :data=\"data\"\r\n          :props=\"defaultProps\"\r\n          :filter-node-method=\"filterNode\"\r\n          :expand-on-click-node=\"false\"\r\n          default-expand-all\r\n          @node-click=\"handleNodeClick\">\r\n        </el-tree>\r\n      </div>\r\n\r\n      <!-- 右侧内容区 -->\r\n      <div class=\"content-area\">\r\n        <!-- 搜索区域 -->\r\n        <div class=\"search-panel\">\r\n          <el-row :gutter=\"15\">\r\n            <el-col :xs=\"24\" :sm=\"12\" :md=\"8\" :lg=\"6\" :xl=\"6\">\r\n              <div class=\"search-item\">\r\n                <span class=\"search-label\">\r\n                  <i class=\"el-icon-user\"></i> 用户名称:\r\n                </span>\r\n                <el-input\r\n                  size=\"small\"\r\n                  v-model=\"search.userName\"\r\n                  placeholder=\"请输入用户名称\"\r\n                  clearable>\r\n                </el-input>\r\n              </div>\r\n            </el-col>\r\n            <el-col :xs=\"24\" :sm=\"12\" :md=\"8\" :lg=\"6\" :xl=\"6\">\r\n              <div class=\"search-item\">\r\n                <span class=\"search-label\">\r\n                  <i class=\"el-icon-phone\"></i> 手机号码:\r\n                </span>\r\n                <el-input\r\n                  size=\"small\"\r\n                  v-model=\"search.tel\"\r\n                  placeholder=\"请输入手机号码\"\r\n                  clearable>\r\n                </el-input>\r\n              </div>\r\n            </el-col>\r\n            <el-col :xs=\"24\" :sm=\"12\" :md=\"8\" :lg=\"6\" :xl=\"6\">\r\n              <div class=\"search-item\">\r\n                <span class=\"search-label\">\r\n                  <i class=\"el-icon-circle-check\"></i> 状态:\r\n                </span>\r\n                <el-select\r\n                  size=\"small\"\r\n                  v-model=\"search.status\"\r\n                  placeholder=\"请选择状态\"\r\n                  clearable>\r\n                  <el-option label=\"正常\" value=\"0\"></el-option>\r\n                  <el-option label=\"停用\" value=\"1\"></el-option>\r\n                </el-select>\r\n              </div>\r\n            </el-col>\r\n            <el-col :xs=\"24\" :sm=\"12\" :md=\"8\" :lg=\"6\" :xl=\"6\">\r\n              <div class=\"search-actions\">\r\n                <el-button\r\n                  size=\"small\"\r\n                  type=\"primary\"\r\n                  icon=\"el-icon-search\"\r\n                  @click=\"searchPage\">\r\n                  查询\r\n                </el-button>\r\n                <el-button\r\n                  size=\"small\"\r\n                  icon=\"el-icon-refresh\"\r\n                  @click=\"refresh\">\r\n                  重置\r\n                </el-button>\r\n              </div>\r\n            </el-col>\r\n          </el-row>\r\n        </div>\r\n\r\n        <!-- 表格区域 -->\r\n        <div class=\"table-panel\">\r\n          <div class=\"table-actions\">\r\n            <el-button\r\n              type=\"primary\"\r\n              size=\"small\"\r\n              icon=\"el-icon-plus\"\r\n              @click=\"addUser\">\r\n              新增用户\r\n            </el-button>\r\n            <el-button\r\n              type=\"success\"\r\n              size=\"small\"\r\n              icon=\"el-icon-edit\"\r\n              :disabled=\"update.length !== 1\"\r\n              @click=\"updateUserBtn\">\r\n              修改\r\n            </el-button>\r\n            <el-popconfirm\r\n              title=\"确定删除选中的用户吗？\"\r\n              @confirm=\"deleteDateBtn\"\r\n              confirm-button-text=\"确认\"\r\n              cancel-button-text=\"取消\"\r\n              icon=\"el-icon-warning\"\r\n              icon-color=\"#FF6B6B\">\r\n              <el-button\r\n                slot=\"reference\"\r\n                type=\"danger\"\r\n                size=\"small\"\r\n                icon=\"el-icon-delete\"\r\n                :disabled=\"update.length <= 0\">\r\n                删除\r\n              </el-button>\r\n            </el-popconfirm>\r\n          </div>\r\n\r\n          <el-table\r\n            v-loading=\"loading\"\r\n            :data=\"tableData\"\r\n            @selection-change=\"handleSelectionChange\"\r\n            stripe\r\n            style=\"width: 100%\"\r\n            class=\"user-table\">\r\n            <el-table-column type=\"selection\" width=\"55\" align=\"center\"></el-table-column>\r\n            <el-table-column label=\"用户名称\" width=\"180\">\r\n              <template #default=\"{row}\">\r\n                <div class=\"user-cell\">\r\n                  <el-avatar :size=\"35\" :src=\"row.avatar || require('../../../assets/image/avator.png')\"></el-avatar>\r\n                  <div class=\"user-info\">\r\n                    <span class=\"user-name\">{{row.userName}}</span>\r\n                  </div>\r\n                </div>\r\n              </template>\r\n            </el-table-column>\r\n            <el-table-column prop=\"loginAccount\" label=\"登陆账号\" width=\"150\"></el-table-column>\r\n            <el-table-column prop=\"deptName\" label=\"部门\" width=\"150\"></el-table-column>\r\n            <el-table-column prop=\"tel\" label=\"手机号\" width=\"150\"></el-table-column>\r\n            <el-table-column label=\"状态\" width=\"100\">\r\n              <template #default=\"{row}\">\r\n                <el-tag v-if=\"row.status == 0\" type=\"success\" size=\"small\">正常</el-tag>\r\n                <el-tag v-if=\"row.status == 1\" type=\"danger\" size=\"small\">停用</el-tag>\r\n              </template>\r\n            </el-table-column>\r\n            <el-table-column prop=\"createTime\" label=\"创建时间\"></el-table-column>\r\n            <el-table-column label=\"操作\" width=\"180\" fixed=\"right\">\r\n              <template #default=\"{row}\">\r\n                <div class=\"action-buttons\">\r\n                  <el-button\r\n                    size=\"mini\"\r\n                    type=\"text\"\r\n                    icon=\"el-icon-edit\"\r\n                    @click=\"updateUser(row.id)\">\r\n                    修改\r\n                  </el-button>\r\n                  <el-popconfirm\r\n                    title=\"确定删除该用户吗？\"\r\n                    @confirm=\"deleteDate(row.id)\"\r\n                    confirm-button-text=\"确认\"\r\n                    cancel-button-text=\"取消\"\r\n                    icon=\"el-icon-warning\"\r\n                    icon-color=\"#FF6B6B\">\r\n                    <el-button\r\n                      slot=\"reference\"\r\n                      size=\"mini\"\r\n                      type=\"text\"\r\n                      icon=\"el-icon-delete\"\r\n                      style=\"color:#F56C6C\">\r\n                      删除\r\n                    </el-button>\r\n                  </el-popconfirm>\r\n                </div>\r\n              </template>\r\n            </el-table-column>\r\n          </el-table>\r\n\r\n          <el-pagination\r\n            background\r\n            layout=\"total, sizes, prev, pager, next, jumper\"\r\n            :page-sizes=\"[10, 20, 50, 100]\"\r\n            :page-size=\"search.pageSize\"\r\n            :current-page=\"search.pageNumber\"\r\n            @size-change=\"handleSizeChange\"\r\n            @current-change=\"handleCurrentChange\"\r\n            :total=\"total\"\r\n            class=\"table-pagination\">\r\n          </el-pagination>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- 对话框组件保持不变 -->\r\n    <add-user @addUserFalse=\"addUserFalse\" :data=\"data\" :post=\"post\" :role=\"role\" :addUserVisible=\"addUserVisible\"></add-user>\r\n    <update-user @updateUserFalse=\"updateUserFalse\" :updateId=\"updateId\" :data=\"data\" :post=\"post\" :role=\"role\" :updateUserVisible=\"updateUserVisible\"></update-user>\r\n    \r\n    <el-dialog\r\n      title=\"重置密码\"\r\n      :visible.sync=\"passwordDialogVisible\"\r\n      width=\"30%\"\r\n      :before-close=\"handlePasswordClose\">\r\n      <div class=\"dialog-content\">\r\n        <div class=\"password-info\">\r\n          <i class=\"el-icon-key\"></i>\r\n          <span>请输入 <span class=\"highlight\">{{userName}}</span> 的新密码：</span>\r\n        </div>\r\n        <el-input\r\n          show-password\r\n          v-model=\"newPassword\"\r\n          size=\"small\"\r\n          placeholder=\"请输入新密码\">\r\n        </el-input>\r\n      </div>\r\n      <div slot=\"footer\" class=\"dialog-footer\">\r\n        <el-button size=\"small\" @click=\"handlePasswordClose\">取 消</el-button>\r\n        <el-button size=\"small\" type=\"primary\" @click=\"passwordSubmit\">确 定</el-button>\r\n      </div>\r\n    </el-dialog>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\n// script部分保持不变\r\n</script>\r\n\r\n<style scoped>\r\n.user-management {\r\n  height: 100%;\r\n  padding: 20px;\r\n  background-color: #f5f7fa;\r\n}\r\n\r\n.layout-container {\r\n  display: flex;\r\n  height: 100%;\r\n}\r\n\r\n.dept-tree {\r\n  width: 280px;\r\n  background: #fff;\r\n  border-radius: 8px;\r\n  box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);\r\n  margin-right: 20px;\r\n  padding: 10px;\r\n  overflow: hidden;\r\n  display: flex;\r\n  flex-direction: column;\r\n}\r\n\r\n.tree-search {\r\n  margin-bottom: 10px;\r\n}\r\n\r\n.tree-content {\r\n  flex: 1;\r\n  overflow: auto;\r\n}\r\n\r\n.content-area {\r\n  flex: 1;\r\n  display: flex;\r\n  flex-direction: column;\r\n}\r\n\r\n.search-panel {\r\n  background: #fff;\r\n  border-radius: 8px;\r\n  padding: 15px;\r\n  margin-bottom: 20px;\r\n  box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);\r\n}\r\n\r\n.search-item {\r\n  display: flex;\r\n  align-items: center;\r\n  margin-bottom: 10px;\r\n}\r\n\r\n.search-label {\r\n  width: 80px;\r\n  font-size: 14px;\r\n  color: #606266;\r\n  display: flex;\r\n  align-items: center;\r\n}\r\n\r\n.search-label i {\r\n  margin-right: 5px;\r\n  color: #7B68EE;\r\n}\r\n\r\n.search-actions {\r\n  display: flex;\r\n  justify-content: flex-end;\r\n}\r\n\r\n.table-panel {\r\n  flex: 1;\r\n  background: #fff;\r\n  border-radius: 8px;\r\n  padding: 15px;\r\n  box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);\r\n  display: flex;\r\n  flex-direction: column;\r\n}\r\n\r\n.table-actions {\r\n  margin-bottom: 15px;\r\n}\r\n\r\n.user-cell {\r\n  display: flex;\r\n  align-items: center;\r\n}\r\n\r\n.user-info {\r\n  margin-left: 10px;\r\n}\r\n\r\n.user-name {\r\n  font-weight: 500;\r\n}\r\n\r\n.action-buttons {\r\n  display: flex;\r\n}\r\n\r\n.table-pagination {\r\n  margin-top: 15px;\r\n  text-align: right;\r\n}\r\n\r\n.dialog-content {\r\n  padding: 10px;\r\n}\r\n\r\n.password-info {\r\n  display: flex;\r\n  align-items: center;\r\n  margin-bottom: 15px;\r\n}\r\n\r\n.password-info i {\r\n  color: #7B68EE;\r\n  margin-right: 8px;\r\n  font-size: 18px;\r\n}\r\n\r\n.highlight {\r\n  color: #7B68EE;\r\n  font-weight: 500;\r\n}\r\n</style>\r\n\r\n<style>\r\n/* 全局表格样式 */\r\n.user-table .el-table__header th {\r\n  background-color: #ECE9F4;\r\n  color: #4A2B90;\r\n  font-weight: bold;\r\n}\r\n\r\n.user-table .el-table__body tr:hover>td {\r\n  background-color: #F5F2FF !important;\r\n}\r\n\r\n.user-table .el-table__body td {\r\n  color: #5F4B8B;\r\n  font-size: 14px;\r\n}\r\n\r\n/* 树形控件样式 */\r\n.el-tree {\r\n  font-family: '黑体';\r\n}\r\n\r\n.el-tree-node__content {\r\n  height: 36px;\r\n}\r\n</style>"],"mappings":";AAsOA","ignoreList":[]},"metadata":{},"sourceType":"script","externalDependencies":[]}