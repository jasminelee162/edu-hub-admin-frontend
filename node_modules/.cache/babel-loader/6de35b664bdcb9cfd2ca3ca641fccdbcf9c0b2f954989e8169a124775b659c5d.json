{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { login, sendEmailCode, emailLogin, getUser } from '@/api/api';\nimport { setLock } from '@/utils/lock';\nexport default {\n  name: 'LoginPage',\n  data() {\n    return {\n      loginType: 'account',\n      // 登录方式：account/email\n      username: '',\n      password: '',\n      email: '',\n      emailCode: '',\n      codeDisabled: false,\n      // 验证码按钮禁用状态\n      codeButtonText: '获取验证码',\n      countdown: 60,\n      // 倒计时\n      timer: null,\n      // 定时器\n      loading: false,\n      // 登录按钮加载状态\n      features: [{\n        icon: 'el-icon-s-data',\n        text: '学情数据分析'\n      }, {\n        icon: 'el-icon-notebook-2',\n        text: '课程内容管理'\n      }, {\n        icon: 'el-icon-s-check',\n        text: '作业批改系统'\n      }, {\n        icon: 'el-icon-chat-line-round',\n        text: '师生互动平台'\n      }]\n    };\n  },\n  mounted() {\n    this.initParticles();\n    // 检查是否是密码修改后的跳转\n    if (this.$route.query.passwordChanged) {\n      this.$notify.success({\n        title: '提示',\n        message: '密码修改成功，请使用新密码登录',\n        duration: 5000\n      });\n      // 清除query参数避免刷新后重复显示\n      const query = {\n        ...this.$route.query\n      };\n      delete query.passwordChanged;\n      this.$router.replace({\n        ...this.$route,\n        query\n      });\n    }\n  },\n  beforeDestroy() {\n    if (this.timer) {\n      clearInterval(this.timer);\n    }\n  },\n  methods: {\n    // 发送验证码\n    async sendCode() {\n      if (!this.email) {\n        this.$message.warning('请输入邮箱地址');\n        return;\n      }\n\n      // 验证邮箱格式\n      const emailRegex = /^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/;\n      if (!emailRegex.test(this.email)) {\n        this.$message.warning('请输入正确的邮箱格式');\n        return;\n      }\n      try {\n        const res = await sendEmailCode(this.email);\n        if (res.code === 1000) {\n          this.$message.success('验证码已发送，请注意查收');\n          this.startCountdown();\n        } else {\n          this.$message.error(res.message || '验证码发送失败');\n          this.resetCodeButton();\n        }\n      } catch (error) {\n        console.error('发送验证码失败:', error);\n        this.$message.error('验证码发送失败，请稍后重试');\n        this.resetCodeButton();\n      }\n    },\n    // 开始倒计时\n    startCountdown() {\n      this.codeDisabled = true;\n      this.countdown = 60;\n      this.codeButtonText = `${this.countdown}秒后重新获取`;\n\n      // 清除之前的定时器\n      if (this.timer) {\n        clearInterval(this.timer);\n      }\n      this.timer = setInterval(() => {\n        this.countdown--;\n        this.codeButtonText = `${this.countdown}秒后重新获取`;\n        if (this.countdown <= 0) {\n          this.resetCodeButton();\n        }\n      }, 1000);\n    },\n    // 重置验证码按钮\n    resetCodeButton() {\n      clearInterval(this.timer);\n      this.codeDisabled = false;\n      this.codeButtonText = '获取验证码';\n      this.countdown = 60;\n      this.timer = null;\n    },\n    // 处理登录\n    handleLogin() {\n      if (this.loginType === 'account') {\n        this.accountLogin();\n      } else {\n        this.handleEmailLogin();\n      }\n    },\n    // 账号密码登录\n    async accountLogin() {\n      if (!this.username) {\n        this.$message.warning('请输入用户名');\n        return;\n      }\n      if (!this.password) {\n        this.$message.warning('请输入密码');\n        return;\n      }\n      this.loading = true;\n      try {\n        const res = await login({\n          username: this.username,\n          password: this.password\n        });\n        if (res.code === 1000) {\n          this.$message.success('登录成功');\n          const token = res.data.token;\n          this.$store.commit('user/setToken', token);\n          await this.getUserInfo();\n          setLock(false);\n\n          // 获取redirect参数，默认跳转到首页\n          const redirect = this.$route.query.redirect || '/index';\n          this.$router.push(redirect);\n        } else {\n          this.$message.error(res.message || '登录失败');\n        }\n      } catch (error) {\n        console.error('登录失败:', error);\n        this.$message.error('登录失败，请稍后重试');\n      } finally {\n        this.loading = false;\n      }\n    },\n    // 邮箱验证码登录\n    async handleEmailLogin() {\n      if (!this.email) {\n        this.$message.warning('请输入邮箱地址');\n        return;\n      }\n      if (!this.emailCode) {\n        this.$message.warning('请输入验证码');\n        return;\n      }\n      this.loading = true;\n      try {\n        const res = await emailLogin({\n          email: this.email,\n          code: this.emailCode\n        });\n        if (res.code === 1000) {\n          this.$message.success('登录成功');\n          const token = res.data.token;\n          this.$store.commit('user/setToken', token);\n          await this.getUserInfo();\n          setLock(false);\n          const redirect = this.$route.query.redirect || '/index';\n          this.$router.push(redirect);\n        } else {\n          this.$message.error(res.message || '登录失败');\n        }\n      } catch (error) {\n        console.error('邮箱登录失败:', error);\n        this.$message.error('登录失败，请稍后重试');\n      } finally {\n        this.loading = false;\n      }\n    },\n    // 获取用户信息\n    async getUserInfo() {\n      try {\n        const res = await getUser();\n        if (res.code === 1000) {\n          this.$store.commit('user/setUser', JSON.stringify(res.data));\n        } else {\n          throw new Error(res.message || '获取用户信息失败');\n        }\n      } catch (error) {\n        console.error('获取用户信息失败:', error);\n        throw error;\n      }\n    },\n    // 初始化粒子背景\n    initParticles() {\n      const canvas = document.getElementById('particle-canvas');\n      const ctx = canvas.getContext('2d');\n      canvas.width = window.innerWidth;\n      canvas.height = window.innerHeight;\n\n      // 粒子配置\n      const particles = [];\n      const particleCount = 80;\n      const colors = ['#6A5ACD', '#483D8B', '#4B0082', '#663399'];\n\n      // 创建粒子\n      for (let i = 0; i < particleCount; i++) {\n        particles.push({\n          x: Math.random() * canvas.width,\n          y: Math.random() * canvas.height,\n          size: Math.random() * 3 + 1,\n          speedX: Math.random() * 0.3 - 0.15,\n          speedY: Math.random() * 0.3 - 0.15,\n          color: colors[Math.floor(Math.random() * colors.length)]\n        });\n      }\n\n      // 动画循环\n      const animate = () => {\n        ctx.clearRect(0, 0, canvas.width, canvas.height);\n\n        // 更新和绘制粒子\n        particles.forEach(particle => {\n          ctx.beginPath();\n          ctx.arc(particle.x, particle.y, particle.size, 0, Math.PI * 2);\n          ctx.fillStyle = particle.color;\n          ctx.fill();\n\n          // 更新位置\n          particle.x += particle.speedX;\n          particle.y += particle.speedY;\n\n          // 边界检查\n          if (particle.x < 0 || particle.x > canvas.width) {\n            particle.speedX *= -1;\n          }\n          if (particle.y < 0 || particle.y > canvas.height) {\n            particle.speedY *= -1;\n          }\n\n          // 绘制连接线\n          particles.forEach(other => {\n            const distance = Math.sqrt(Math.pow(particle.x - other.x, 2) + Math.pow(particle.y - other.y, 2));\n            if (distance < 120) {\n              ctx.beginPath();\n              ctx.strokeStyle = `rgba(106, 90, 205, ${1 - distance / 120})`;\n              ctx.lineWidth = 0.3;\n              ctx.moveTo(particle.x, particle.y);\n              ctx.lineTo(other.x, other.y);\n              ctx.stroke();\n            }\n          });\n        });\n        requestAnimationFrame(animate);\n      };\n      animate();\n    }\n  }\n};","map":{"version":3,"names":["login","sendEmailCode","emailLogin","getUser","setLock","name","data","loginType","username","password","email","emailCode","codeDisabled","codeButtonText","countdown","timer","loading","features","icon","text","mounted","initParticles","$route","query","passwordChanged","$notify","success","title","message","duration","$router","replace","beforeDestroy","clearInterval","methods","sendCode","$message","warning","emailRegex","test","res","code","startCountdown","error","resetCodeButton","console","setInterval","handleLogin","accountLogin","handleEmailLogin","token","$store","commit","getUserInfo","redirect","push","JSON","stringify","Error","canvas","document","getElementById","ctx","getContext","width","window","innerWidth","height","innerHeight","particles","particleCount","colors","i","x","Math","random","y","size","speedX","speedY","color","floor","length","animate","clearRect","forEach","particle","beginPath","arc","PI","fillStyle","fill","other","distance","sqrt","pow","strokeStyle","lineWidth","moveTo","lineTo","stroke","requestAnimationFrame"],"sources":["src/views/system/login/login.vue"],"sourcesContent":["<template>\r\n  <div class=\"login-container\">\r\n    <!-- 粒子背景画布 -->\r\n    <canvas id=\"particle-canvas\"></canvas>\r\n    \r\n    <!-- 左侧内容区域 -->\r\n    <div class=\"left-content\">\r\n      <div class=\"logo-area\">\r\n        <img src=\"@/assets/image/systemlogo.png\" class=\"logo-img\" />\r\n        <div class=\"platform-role\">教师 · 管理中枢</div>\r\n      </div>\r\n      \r\n      <div class=\"feature-list\">\r\n        <div v-for=\"(feature, index) in features\" :key=\"index\" class=\"feature-item\">\r\n          <i :class=\"feature.icon\"></i>\r\n          <span>{{ feature.text }}</span>\r\n        </div>\r\n      </div>\r\n      \r\n      <div class=\"quote-area\">\r\n        <p class=\"quote-text\">\"教育不是灌输，而是点燃火焰\"</p>\r\n        <p class=\"quote-author\">—— 苏格拉底 ——</p>\r\n      </div>\r\n    </div>\r\n    \r\n    <!-- 右侧登录卡片 -->\r\n    <div class=\"login-card\">\r\n      <h2 class=\"slogan-en\">TEACH WITH INTELLIGENCE</h2>\r\n      <p class=\"slogan-cn\">智能教育管理平台，赋能高效教学</p>\r\n      \r\n      <div class=\"divider\"></div>\r\n      \r\n      <p class=\"sub-slogan\">精准掌握每位学生的学习轨迹<br>用数据驱动个性化教学方案</p>\r\n      \r\n      <div class=\"login-form\">\r\n        <!-- 登录方式切换 -->\r\n        <div class=\"login-type-switch\">\r\n          <span\r\n            :class=\"['login-type-option', loginType === 'account' ? 'active' : '']\"\r\n            @click=\"loginType = 'account'\"\r\n          >\r\n            账号密码登录\r\n          </span>\r\n          <span\r\n            :class=\"['login-type-option', loginType === 'email' ? 'active' : '']\"\r\n            @click=\"loginType = 'email'\"\r\n          >\r\n            邮箱验证码登录\r\n          </span>\r\n        </div>\r\n\r\n        <!-- 账号密码登录表单 -->\r\n        <div v-if=\"loginType === 'account'\" class=\"account-login\">\r\n          <el-input\r\n            v-model=\"username\"\r\n            placeholder=\"工号/用户名\"\r\n            prefix-icon=\"el-icon-user\"\r\n            class=\"custom-input\"\r\n            @keyup.enter.native=\"handleLogin\"\r\n          ></el-input>\r\n          \r\n          <el-input\r\n            v-model=\"password\"\r\n            placeholder=\"密码\"\r\n            prefix-icon=\"el-icon-lock\"\r\n            show-password\r\n            class=\"custom-input\"\r\n            @keyup.enter.native=\"handleLogin\"\r\n          ></el-input>\r\n        </div>\r\n        \r\n        <!-- 邮箱验证码登录表单 -->\r\n        <div v-else class=\"email-login\">\r\n          <el-input\r\n            v-model=\"email\"\r\n            placeholder=\"请输入邮箱\"\r\n            prefix-icon=\"el-icon-message\"\r\n            class=\"custom-input\"\r\n            @keyup.enter.native=\"handleLogin\"\r\n          ></el-input>\r\n          \r\n          <div class=\"code-input-group\">\r\n            <el-input\r\n              v-model=\"emailCode\"\r\n              placeholder=\"验证码\"\r\n              prefix-icon=\"el-icon-key\"\r\n              class=\"custom-input code-input\"\r\n              @keyup.enter.native=\"handleLogin\"\r\n            ></el-input>\r\n            <el-button \r\n              :disabled=\"codeDisabled\"\r\n              @click=\"sendCode\"\r\n              class=\"code-btn\"\r\n            >\r\n              {{ codeButtonText }}\r\n            </el-button>\r\n          </div>\r\n        </div>\r\n        \r\n        <el-button \r\n          type=\"primary\" \r\n          class=\"login-btn\"\r\n          @click=\"handleLogin\"\r\n          :loading=\"loading\"\r\n        >\r\n          {{ loginType === 'account' ? '登 录' : '邮箱登录' }}\r\n        </el-button>\r\n      </div>\r\n      \r\n      <div class=\"footer\">\r\n        <p>—— 让科技赋能每一份教育热忱 ——</p>\r\n        <p class=\"en-footer\">Where Innovation Meets Education</p>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { login, sendEmailCode, emailLogin, getUser } from '@/api/api'\r\nimport { setLock } from '@/utils/lock'\r\n\r\nexport default {\r\n  name: 'LoginPage',\r\n  data() {\r\n    return {\r\n      loginType: 'account', // 登录方式：account/email\r\n      username: '',\r\n      password: '',\r\n      email: '',\r\n      emailCode: '',\r\n      codeDisabled: false, // 验证码按钮禁用状态\r\n      codeButtonText: '获取验证码',\r\n      countdown: 60, // 倒计时\r\n      timer: null, // 定时器\r\n      loading: false, // 登录按钮加载状态\r\n      features: [\r\n        { icon: 'el-icon-s-data', text: '学情数据分析' },\r\n        { icon: 'el-icon-notebook-2', text: '课程内容管理' },\r\n        { icon: 'el-icon-s-check', text: '作业批改系统' },\r\n        { icon: 'el-icon-chat-line-round', text: '师生互动平台' }\r\n      ]\r\n    }\r\n  },\r\n  mounted() {\r\n    this.initParticles()\r\n    // 检查是否是密码修改后的跳转\r\n    if (this.$route.query.passwordChanged) {\r\n      this.$notify.success({\r\n        title: '提示',\r\n        message: '密码修改成功，请使用新密码登录',\r\n        duration: 5000\r\n      })\r\n      // 清除query参数避免刷新后重复显示\r\n      const query = { ...this.$route.query }\r\n      delete query.passwordChanged\r\n      this.$router.replace({ ...this.$route, query })\r\n    }\r\n  },\r\n  beforeDestroy() {\r\n    if (this.timer) {\r\n      clearInterval(this.timer)\r\n    }\r\n  },\r\n  methods: {\r\n    // 发送验证码\r\n    async sendCode() {\r\n      if (!this.email) {\r\n        this.$message.warning('请输入邮箱地址')\r\n        return\r\n      }\r\n      \r\n      // 验证邮箱格式\r\n      const emailRegex = /^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/\r\n      if (!emailRegex.test(this.email)) {\r\n        this.$message.warning('请输入正确的邮箱格式')\r\n        return\r\n      }\r\n      \r\n      try {\r\n        const res = await sendEmailCode(this.email)\r\n        if (res.code === 1000) {\r\n          this.$message.success('验证码已发送，请注意查收')\r\n          this.startCountdown()\r\n        } else {\r\n          this.$message.error(res.message || '验证码发送失败')\r\n          this.resetCodeButton()\r\n        }\r\n      } catch (error) {\r\n        console.error('发送验证码失败:', error)\r\n        this.$message.error('验证码发送失败，请稍后重试')\r\n        this.resetCodeButton()\r\n      }\r\n    },\r\n    \r\n    // 开始倒计时\r\n    startCountdown() {\r\n      this.codeDisabled = true\r\n      this.countdown = 60\r\n      this.codeButtonText = `${this.countdown}秒后重新获取`\r\n      \r\n      // 清除之前的定时器\r\n      if (this.timer) {\r\n        clearInterval(this.timer)\r\n      }\r\n      \r\n      this.timer = setInterval(() => {\r\n        this.countdown--\r\n        this.codeButtonText = `${this.countdown}秒后重新获取`\r\n        \r\n        if (this.countdown <= 0) {\r\n          this.resetCodeButton()\r\n        }\r\n      }, 1000)\r\n    },\r\n    \r\n    // 重置验证码按钮\r\n    resetCodeButton() {\r\n      clearInterval(this.timer)\r\n      this.codeDisabled = false\r\n      this.codeButtonText = '获取验证码'\r\n      this.countdown = 60\r\n      this.timer = null\r\n    },\r\n    \r\n    // 处理登录\r\n    handleLogin() {\r\n      if (this.loginType === 'account') {\r\n        this.accountLogin()\r\n      } else {\r\n        this.handleEmailLogin()\r\n      }\r\n    },\r\n    \r\n    // 账号密码登录\r\n    async accountLogin() {\r\n      if (!this.username) {\r\n        this.$message.warning('请输入用户名')\r\n        return\r\n      }\r\n      if (!this.password) {\r\n        this.$message.warning('请输入密码')\r\n        return\r\n      }\r\n      \r\n      this.loading = true\r\n      \r\n      try {\r\n        const res = await login({\r\n          username: this.username,\r\n          password: this.password\r\n        })\r\n        \r\n        if (res.code === 1000) {\r\n          this.$message.success('登录成功')\r\n          const token = res.data.token\r\n          this.$store.commit('user/setToken', token)\r\n          \r\n          await this.getUserInfo()\r\n          setLock(false)\r\n          \r\n          // 获取redirect参数，默认跳转到首页\r\n          const redirect = this.$route.query.redirect || '/index'\r\n          this.$router.push(redirect)\r\n        } else {\r\n          this.$message.error(res.message || '登录失败')\r\n        }\r\n      } catch (error) {\r\n        console.error('登录失败:', error)\r\n        this.$message.error('登录失败，请稍后重试')\r\n      } finally {\r\n        this.loading = false\r\n      }\r\n    },\r\n    \r\n    // 邮箱验证码登录\r\n    async handleEmailLogin() {\r\n      if (!this.email) {\r\n        this.$message.warning('请输入邮箱地址')\r\n        return\r\n      }\r\n      \r\n      if (!this.emailCode) {\r\n        this.$message.warning('请输入验证码')\r\n        return\r\n      }\r\n      \r\n      this.loading = true\r\n      \r\n      try {\r\n        const res = await emailLogin({\r\n          email: this.email,\r\n          code: this.emailCode\r\n        })\r\n        \r\n        if (res.code === 1000) {\r\n          this.$message.success('登录成功')\r\n          const token = res.data.token\r\n          this.$store.commit('user/setToken', token)\r\n          \r\n          await this.getUserInfo()\r\n          setLock(false)\r\n          \r\n          const redirect = this.$route.query.redirect || '/index'\r\n          this.$router.push(redirect)\r\n        } else {\r\n          this.$message.error(res.message || '登录失败')\r\n        }\r\n      } catch (error) {\r\n        console.error('邮箱登录失败:', error)\r\n        this.$message.error('登录失败，请稍后重试')\r\n      } finally {\r\n        this.loading = false\r\n      }\r\n    },\r\n    \r\n    // 获取用户信息\r\n    async getUserInfo() {\r\n      try {\r\n        const res = await getUser()\r\n        if (res.code === 1000) {\r\n          this.$store.commit('user/setUser', JSON.stringify(res.data))\r\n        } else {\r\n          throw new Error(res.message || '获取用户信息失败')\r\n        }\r\n      } catch (error) {\r\n        console.error('获取用户信息失败:', error)\r\n        throw error\r\n      }\r\n    },\r\n\r\n    // 初始化粒子背景\r\n    initParticles() {\r\n      const canvas = document.getElementById('particle-canvas')\r\n      const ctx = canvas.getContext('2d')\r\n      canvas.width = window.innerWidth\r\n      canvas.height = window.innerHeight\r\n      \r\n      // 粒子配置\r\n      const particles = []\r\n      const particleCount = 80\r\n      const colors = ['#6A5ACD', '#483D8B', '#4B0082', '#663399']\r\n      \r\n      // 创建粒子\r\n      for (let i = 0; i < particleCount; i++) {\r\n        particles.push({\r\n          x: Math.random() * canvas.width,\r\n          y: Math.random() * canvas.height,\r\n          size: Math.random() * 3 + 1,\r\n          speedX: Math.random() * 0.3 - 0.15,\r\n          speedY: Math.random() * 0.3 - 0.15,\r\n          color: colors[Math.floor(Math.random() * colors.length)]\r\n        })\r\n      }\r\n      \r\n      // 动画循环\r\n      const animate = () => {\r\n        ctx.clearRect(0, 0, canvas.width, canvas.height)\r\n        \r\n        // 更新和绘制粒子\r\n        particles.forEach(particle => {\r\n          ctx.beginPath()\r\n          ctx.arc(particle.x, particle.y, particle.size, 0, Math.PI * 2)\r\n          ctx.fillStyle = particle.color\r\n          ctx.fill()\r\n          \r\n          // 更新位置\r\n          particle.x += particle.speedX\r\n          particle.y += particle.speedY\r\n          \r\n          // 边界检查\r\n          if (particle.x < 0 || particle.x > canvas.width) {\r\n            particle.speedX *= -1\r\n          }\r\n          if (particle.